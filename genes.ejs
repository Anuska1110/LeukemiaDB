</head>

<body>

  <section id="title">
    <div class="container-fluid">
      <!-- Nav Bar -->


      <ul class="nav justify-content-end nav-tabs heading">
        <li class="nav-item">
          <a class="nav-link active" href="/home">Home</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link active dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dataset</a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="/genes">Leukemia Genes</a>
            <a class="dropdown-item" href="/drugs">Leukemia Drugs</a>
          </div>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/dashboard">Patients</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="#contact">Contact</a>
        </li>
      </ul>




      <!-- Title -->

      <div class="row">
        <div class="col-lg-6">

          <h1 class="big-heading">LEUKEMIA GENES:</h1>
          <!-- <button type="button" class="btn btn-dark btn-lg download-button">Login</button> -->
          <!-- <button type="button" class="btn btn-outline-light btn-lg download-button">Sign Up</button> -->
          <h5>Select one to view details</h5>
          <a class="nav-link" href="#tables1"><button type="button" class="btn btn-dark btn-md download-button">Genes sorted in alphabetical order </button></a>
          <a class="nav-link" href="#tables2"><button type="button" class="btn btn-outline-light btn-md download-button">Genes sorted on chromosome number</button></a>
          <a class="nav-link" href="#tables3"><button type="button" class="btn btn-dark btn-md download-button">Genes based on leukemic types</button></a>
        </div>
        <div class="col-lg-6">
          <!-- <img class="title-image" src="images/health3.jfif" alt="image" width="600" height="440"> -->
        </div>
      </div>
  </section>
  <!-- Table  -->
  <section id="tables1">
    <h3>1. Genes sorted in alphabetical order</h3>
    <table>
      <tr>
        <th>Chromosome Number</th>
        <th>Gene Name</th>
        <th>Gene Loci</th>
      </tr>

      <% for(let i=0;i<genes.length;i++){%>
      <tr>
        <div class="">
          <td>
            <p><%=genes[i].cnumber%></p>
          </td>
          <td>
            <p><%=genes[i].gname%></p>
          </td>
          <td>
            <p><%=genes[i].gloci%></p>
          </td>
        </div>
      </tr>
      <%}%>

  </table>
</section>

<section id="tables2">
  <h3>2.  Genes ordered on chromosome number</h3>
  <table>
    <tr>
      <th>Chromosome Number</th>
      <th>Gene Name</th>
      <th>Gene Loci</th>
    </tr>
    <% for(let i=0;i<chromo.length;i++){%>
      <tr>
        <div class="">
          <td>
            <p><%=chromo[i].cnumber%></p>
          </td>
          <td>
            <p><%=chromo[i].gname%></p>
          </td>
          <td>
            <p><%=chromo[i].gloci%></p>
          </td>
        </div>
      </tr>
      <%}%>
  </table>
  </section>

      <section id="tables3">
        <h3>3.  Genes based on leukemic types</h3>
        <table>
            <tr>
              <th>Type of Leukemia</th>
              <th>Gene Name</th>
            </tr>
    <% for(let i=0;i<luke.length;i++){%>
      <div class="">
        <td>
          <p><%=luke[i].type%></p>
        </td>
        <td>
          <p><%=luke[i].geneName%></p>
        </td>
        </tr>
      </div>
      <%}%>
  </table>
  </section>

  </body>
</html>
